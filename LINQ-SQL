# INNER JOIN

SQL:
      Select * FROM MainTable T
      INNER JOIN Add_table pm ON pm.Id=T.Id
      
LINQ: 

        var query = MainTable.Join(Add_table,
                                mainT => mainT.Id, // Primary Key
                                addT => addT.Id, // Foreign Key
                                (mainT, addT) => new { data = mainT, meta = addT });
